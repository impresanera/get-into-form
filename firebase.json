{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        ".runtimeconfig.json"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" ci",
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "ls \"$RESOURCE_DIR\"",
        "mv shared/shared-1.0.0.tgz \"$RESOURCE_DIR/shared-1.0.0.tgz\"",
        "npm --prefix \"$RESOURCE_DIR\" install \"$RESOURCE_DIR/shared-1.0.0.tgz\"",

        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "public": "hosting/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "target": "impresaner-forms",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "public": "hosting/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "target": "impresaner-forms-stg",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["node", "./src"],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*d.ts"],
  "exclude": ["node_modules"]
}
